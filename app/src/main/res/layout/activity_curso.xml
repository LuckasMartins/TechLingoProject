<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header com o nome do curso e ícone da aula -->

    <!-- Botões das aulas -->


    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#469FD1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Ícone da aula à esquerda -->

        <!-- Nome do curso à direita -->
        <TextView
            android:id="@+id/nomeCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:paddingStart="16dp"
            android:text="Nome do Curso"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="492dp"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="97dp"
        android:orientation="vertical">

        <!-- Botão da Aula 01 -->

        <!-- Status da Aula 01 -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listacursos"
            android:fontFamily="@font/archivo_black"
            android:text="AULA 01"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concluído"
            android:textColor="#00FF00" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listacursos"
            android:fontFamily="@font/archivo_black"
            android:text="AULA 02"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Não Concluído"
            android:textColor="#FF0000" />

    </LinearLayout>

    <TextView
        android:id="@+id/dataEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="222dp"
        android:text="Data entrada: 01/09/2023"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/statusCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Incompleto"
        android:textColor="#FF0000" />

    <ImageView
        android:id="@+id/iconeAula"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/icone_aula" />


</RelativeLayout>
