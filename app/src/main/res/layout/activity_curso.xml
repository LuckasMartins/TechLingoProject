<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="439dp"
        android:background="@drawable/listacursos"
        android:fontFamily="@font/baloo"
        android:gravity="center_vertical"
        android:paddingEnd="16dp"
        android:text="     Aula 01"
        android:textColor="#000000"
        android:textSize="20dp">


    </Button>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="532dp"
        android:fontFamily="@font/baloo"
        android:text="Complete/Incomplete/In Progress"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView6"
        android:layout_below="@+id/headerLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/baloo"
        android:text="dd/mm/yyyy"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#469FD1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Ícone da aula à esquerda -->
        <ImageView
            android:id="@+id/iconeAula"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/icone_aula" />

        <!-- Nome do curso à direita -->
        <TextView
            android:id="@+id/nomeCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abril_fatface"
            android:paddingStart="16dp"
            android:text="Nome do Curso"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_above="@+id/textView4"
        android:layout_below="@+id/headerLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="-6dp"
        android:layout_marginBottom="31dp"
        android:layout_toStartOf="@+id/textView3"
        android:fontFamily="@font/baloo"
        android:text="Data entrada:"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="531dp"
        android:layout_toStartOf="@+id/textView6"
        android:fontFamily="@font/baloo"
        android:text="Status:"
        android:textColor="#000000" />


</RelativeLayout>
