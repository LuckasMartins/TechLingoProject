<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!-- Header com o nome do curso e ícone da aula -->


        <TextView
            android:id="@+id/textView5"
            android:layout_width="136dp"
            android:layout_height="35dp"
            android:layout_below="@+id/videoView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="255dp"
            android:background="@drawable/listacursos"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Questões Aula 1: "
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="#469FD1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Ícone da aula à esquerda -->
            <ImageView
                android:id="@+id/iconeAula"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/icone_aula" />

            <!-- Nome do curso à direita -->
            <TextView
                android:id="@+id/nomeCurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:paddingStart="16dp"
                android:text="Nome do Curso"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Layout para o título da aula -->

        <!-- Vídeo (Substitua com o componente de vídeo apropriado) -->

        <!-- Botões das alternativas -->

        <LinearLayout
            android:id="@+id/aulaLayout"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <!-- Título da aula -->
            <TextView
                android:id="@+id/tituloAula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Aula 1 - Nome da Aula"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="380dp"
            android:layout_height="197dp"
            android:layout_below="@id/aulaLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="15dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/videoView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="312dp"
            android:fontFamily="@font/baloo"
            android:text="Video Aula 1"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="186dp"
            android:layout_above="@+id/btnNoAccount2"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="74dp"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exemplo Texto"
                android:textColor="#000000" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exemplo Texto"
                android:textColor="#000000" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exemplo Texto "
                android:textColor="#000000" />
        </LinearLayout>

        <Button
            android:id="@+id/btnNoAccount2"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="126dp"
            android:layout_marginEnd="138dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botaonaotemconta"
            android:backgroundTint="#97D3F4"
            android:text="Aula 2" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
